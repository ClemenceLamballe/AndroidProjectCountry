<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorAppBlue</item>
        <item name="colorPrimaryDark">@color/colorAppBlueDark</item>
        <item name="colorAccent">@color/colorAppPink</item>
    </style>

    <style name="TitleTextViewStyle">
        <item name="android:textColor">@color/colorAppBlueDark</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/colorAppBlue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAppBlueDark</item>
    </style>

    <style name="ButtonStylePink">
        <item name="android:backgroundTint">@color/colorAppPink</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAppPinkDark</item>
    </style>


</resources>
