<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAppBlue</item>
        <item name="colorPrimaryDark">@color/colorAppBlue</item>
        <item name="colorAccent">@color/colorAppBlue</item>
    </style>

    <!-- Style for TextView titles -->
    <style name="TitleTextViewStyle">
        <item name="android:textColor">@color/colorAppBlue</item>
    </style>

    <!-- Style for Buttons -->
    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/colorAppBlue</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--<style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
          or "auto" for default behavior
    </style>-->
</resources>
