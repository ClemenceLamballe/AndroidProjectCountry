<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quizz"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp"
            style="@style/TitleTextViewStyle"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test your knowledge about your favorite countries now!"
            android:textSize="16sp"
            android:gravity="left"
            android:padding="16dp"
            style="@style/TitleTextViewStyle"/>

    <Button
            android:id="@+id/StartQuizzButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Quiz"
            style="@style/ButtonStyle"/>

    <TextView
            android:id="@+id/errorTextViewQuizz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You must add countries to your favorite countries list first"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp"
            android:gravity="center"
            android:visibility="gone"
            android:padding="16dp"/>

    <TextView
            android:id="@+id/CountryNameTextViewQuizz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How much do you know about ...."
            android:textStyle="bold"

            android:textSize="20sp"
            android:gravity="left"
            android:padding="16dp"
            style="@style/TitleTextViewStyle"/>

    <TextView
            android:id="@+id/questionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question : "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

    <TextView
            android:id="@+id/questionPhraseTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

    <EditText
            android:id="@+id/answerEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Answer"
            android:inputType="text"/>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal">

        <Button
                android:id="@+id/submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Check"
                style="@style/ButtonStyle"/>

        <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                style="@style/ButtonStyle"/>
    </LinearLayout>

    <TextView
            android:id="@+id/feedbackTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="16dp"/>
</LinearLayout>
